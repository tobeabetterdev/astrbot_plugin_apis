{
    "debug": {
        "description": "调试模式",
        "type": "bool",
        "default": false,
        "hint": "如果添加api时报错，试着打开debug找问题"
    },
    "auto_save_data": {
        "description": "是否自动保存数据",
        "type": "bool",
        "default": true,
        "hint": "建议保存，当api失效时可换用本地数据"
    },
    "prefix_mode": {
        "description": "是否启用前缀模式",
        "type": "bool",
        "default": false,
        "hint": "启用后，需要在触发词前加上前缀或者@bot才能触发api"
    },
    "type_switch": {
        "description": "类型开关",
        "type": "object",
        "items": {
            "enable_text": {
                "description": "是否启用文本api",
                "type": "bool",
                "default": true,
                "hint": ""
            },
            "enable_image": {
                "description": "是否启用图片api",
                "type": "bool",
                "default": true,
                "hint": ""
            },
            "enable_video": {
                "description": "是否启用视频api",
                "type": "bool",
                "default": true,
                "hint": ""
            },
            "enable_audio": {
                "description": "是否启用音频api",
                "type": "bool",
                "default": true,
                "hint": ""
            }
        }
    },
    "disable_api": {
        "description": "禁用的api",
        "type": "list",
        "default": [],
        "hint": "禁用列表内的关键词会被屏蔽，从而达到不能触发api的效果"
    },
    "timeout": {
        "description": "API请求超时（秒）",
        "type": "int",
        "default": 5,
        "hint": "设置调用API时的网络请求超时时间"
    }
}